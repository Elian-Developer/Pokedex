<div class="container-fluid">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @if (Model == null || Model.Count == 0)
        {

            <h3>No hay Pokemones</h3>

        }
        else
        {

            @foreach (PokemonesViewModels item in Model)
            {

                <div class="col-4">
                    <div class="card zoom border-dark" style= "background-color:aliceblue">
                        <div class="card-header">
                            <center><h4><i> @item.Name</i></h4></center>
                        </div>
                        <div class="card-body">
                            <img class="bd-placeholder-img card-img-top" width="100" height="220" src="@item.ImageUrl" />
                            <hr />
                            <div>
                                <center><p class="mb-2 fw-bold"><i> De Tipo: @item.Tipo </i></p></center>
                                @*<center><p class="mb-2 fw-bold"><i> Tipo Secundario: @item.TipoUno </i></p></center>*@
                                <hr />
                                <center><p class="mb-3 fw-bold"><i> Region: @item.Region </i></p></center>
                            </div>
                        </div>
                    </div>
                </div>

            }

        }

    </div>
</div>
