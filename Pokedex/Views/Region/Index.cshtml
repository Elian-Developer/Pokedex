@using Pokedex.Core.Application.ViewModels.Region
@model List<RegionViewModel>

@{
    ViewData["Title"] = "Mant. Region";
    int count = 0;
}

    <div class="row">
        <h3 style="text-align:center;" class="fw-bold text-success"><i>Regions Mant.</i></h3>
    </div>

<div class="container-fluid">

    <div class="row">
        <div class="col-12 mb-3">
            <a asp-controller="Region" asp-action="Create" class="btn btn-outline-primary "> <i class="bi bi-plus-lg"></i> Crear Nuevo</a>
        </div>
    </div>

    <div class="row">
           
            <table class="table table-bordered border-success">

                <thead>
                    <tr>
                       <th scope="col">#</th>
                       <th scope="col">Nombre</th>
                       <th scope="col">Acciones</th>
                    </tr>
                </thead>

        @foreach (RegionViewModel item in Model)
        {
                count++;

            <tbody>
                  <tr>
                     <td>@count</td>
                     <td>@item.Name</td>
                     <td>
                        <div class="" role="">
                            <a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success" type="button"> <i class="bi bi-pencil-square"></i> Editar</a> 
                            <a asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" type="button"> <i class="bi bi-trash"></i> Eliminar</a>
                        </div>
                     </td>
                  </tr>
            </tbody>

        }

            </table>

    </div>
</div>



